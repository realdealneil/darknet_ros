<?xml version="1.0" encoding="utf-8"?>

<launch>
	
  <!-- The robot_namespace allows us to have yolo nodes running for multiple vehicles -->
  <arg name="robot_namespace" default="X1" />
  <arg name="camera_topic" default="/X1/front/image_raw" />
  
  <!-- Console launch prefix -->
  <arg name="launch_prefix" default=""/>

  <!-- Config and weights folder. -->
  <arg name="yolo_weights_path"          default="$(find darknet_ros)/yolo_network_config/weights"/>
  <arg name="yolo_config_path"           default="$(find darknet_ros)/yolo_network_config/cfg"/>

  <!-- Load parameters -->
  <rosparam command="load" ns="$(arg robot_namespace)/darknet_ros" file="$(find darknet_ros)/config/ros.yaml"/>
  <rosparam command="load" ns="$(arg robot_namespace)/darknet_ros" file="$(find darknet_ros)/config/yolov3-tiny-subt.yaml"/>

  <!-- Start darknet and ros wrapper  ns="$(arg robot_namespace)"  -->
  <node pkg="darknet_ros" type="darknet_ros" name="darknet_ros" output="screen" ns="$(arg robot_namespace)" launch-prefix="$(arg launch_prefix)">
    <param name="weights_path"          value="$(arg yolo_weights_path)" />
    <param name="config_path"           value="$(arg yolo_config_path)" />    
    <param name="subscribers/camera_reading/topic" value="/$(arg camera_topic)" />
    
    <!-- Reconfigure the publishers to use the namespace as well... This should be done a more standard way, but oh well -->
    <param name="publishers/object_detector/topic" value="/$(arg robot_namespace)/darknet_ros/found_object" />
    <param name="publishers/bounding_boxes/topic" value="/$(arg robot_namespace)/darknet_ros/bounding_boxes" />
    <param name="publishers/detection_image/topic" value="/$(arg robot_namespace)/darknet_ros/detection_image" />-->
    
  </node>

 <!--<node name="republish" type="republish" pkg="image_transport" output="screen" 	args="compressed in:=/front_camera/image_raw raw out:=/camera/image_raw" /> -->
 <!--<node name="republish" type="republish" pkg="image_transport" output="screen" 	args="raw in:=/$(arg robot_namespace)/front/image_raw raw out:=/camera/rgb/image_raw"/>-->
</launch>
